<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="qlearn.com.quang.english">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:name=".util.MyApplication"
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.FirstActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.InitDataBaseActivity">

        </activity>
        <activity
            android:name=".activity.HomeActivity"
            android:hardwareAccelerated="@bool/isLolilop">

        </activity>
        <activity
            android:name=".activity.DetailVocabularyActivity"
            android:hardwareAccelerated="@bool/isLolilop">

        </activity>
        <activity
            android:name=".activity.DetailListenPhraseActivity"
            android:hardwareAccelerated="@bool/isLolilop">

        </activity>

    </application>

</manifest>
