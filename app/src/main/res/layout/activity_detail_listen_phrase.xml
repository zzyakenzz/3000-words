<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/white">
        <com.gc.materialdesign.views.LayoutRipple
            android:layout_marginLeft="10dp"
        android:id="@+id/ic_arrow_left"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_action_back"
                />
        </com.gc.materialdesign.views.LayoutRipple>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_500"
            android:layout_centerInParent="true"
            android:layout_alignLeft="@+id/ic_arrow_left"
            android:layout_alignRight="@+id/ic_settings"
            android:gravity="center"
            android:text="Hello"
            android:id="@+id/txt_title_phrase"/>
        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/ic_settings"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_action_settings"
                />
        </com.gc.materialdesign.views.LayoutRipple>
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/ab_solid_shadow_holo"/>
    <ListView
        android:id="@+id/list_listen_phrase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp">

    </ListView>
</LinearLayout>
