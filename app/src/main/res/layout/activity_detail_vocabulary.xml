<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:scaleType="fitStart"
        android:id="@+id/image_vocabulary" />
    <qlearn.com.quang.english.customview.TextRoboBoldColor
        android:id="@+id/txt_detail_vocabulary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:gravity="center"
        android:text="Abandon"/>
    <qlearn.com.quang.english.customview.TextRoboThin
        android:id="@+id/txt_detail_wordform"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:text="word_form"/>
    <qlearn.com.quang.english.customview.TextRoboThin
        android:id="@+id/txt_detail_pronouce"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:text="pronouce"/>
    <qlearn.com.quang.english.customview.TextRoboBoldColor
        android:id="@+id/txt_detail_translate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:text="translate"/>
    <qlearn.com.quang.english.customview.TextRoboBoldColor
        android:id="@+id/txt_detail_relate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_500"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="left"
        android:text="Relate with: "/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_content_des"
        android:layout_margin="10dp">

    </LinearLayout>
</LinearLayout>
</ScrollView>